---
import LayoutBasic from '../layouts/LayoutBasic.astro';
import FormularioRegistro from '../components/registro/FormularioRegistro.jsx';
import ResumenRegistro from '../components/registro/ResumenRegistro.jsx';
---

<LayoutBasic 
  title="Registro al Congreso - Barra Mexicana de Abogados Liberales" 
  showFooter={true}
>
  <section class="registro-hero">
    <div class="container">
      <div class="hero-content">
        <div class="breadcrumb">
          <a href="/">Inicio</a>
          <span class="separator">›</span>
          <span class="current">Registro</span>
        </div>
        
        <h1 class="hero-title">Registro al Congreso</h1>
        <p class="hero-subtitle">
          Complete el siguiente formulario para confirmar su participación en el
          <strong>Congreso Nacional de Litigio Estratégico en Amparo 2025</strong>
        </p>
      </div>
    </div>
  </section>

  <section class="registro-content">
    <div class="container">
      <div class="registro-layout">
        <!-- Formulario (columna izquierda) -->
        <div class="registro-form-column">
          <FormularioRegistro transition:persist client:only="react" />
        </div>

        <!-- Resumen (columna derecha - sticky) -->
        <div class="registro-summary-column">
          <ResumenRegistro transition:persist client:only="react" />
        </div>
      </div>
    </div>
  </section>
</LayoutBasic>

<style>
  /* ============================================
     HERO SECTION
     ============================================ */
  
  .registro-hero {
    background: linear-gradient(180deg, #020266 0%, #05054F 100%);
    padding: 8rem 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .registro-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(238, 203, 0, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(238, 203, 0, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Breadcrumb */
  .breadcrumb {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: #F4D672;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .breadcrumb a:hover {
    color: #EECB00;
  }

  .breadcrumb .separator {
    color: rgba(255, 255, 255, 0.5);
  }

  .breadcrumb .current {
    color: #FFFFFF;
    font-weight: 600;
  }

  /* Título */
  .hero-title {
    font-family: var(--al-font-headline, 'Merriweather', serif);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: #FFFFFF;
    line-height: 1.2;
    margin-bottom: 1rem;
    text-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  /* Subtítulo */
  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-subtitle strong {
    color: #EECB00;
    font-weight: 600;
  }

  /* ============================================
     CONTENT SECTION (LAYOUT 2-COLUMNAS)
     ============================================ */

  .registro-content {
    padding: 5rem 0;
    background: linear-gradient(180deg, #F8FAFC 0%, #FFFFFF 100%);
  }

  .registro-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 4rem;
    align-items: start;
  }

  .registro-form-column {
    width: 100%;
  }

  .registro-summary-column {
    width: 100%;
  }

  /* ============================================
     RESPONSIVE
     ============================================ */

  @media (max-width: 1024px) {
    .registro-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .registro-summary-column {
      order: -1; /* Resumen primero en móvil */
    }
  }

  @media (max-width: 768px) {
    .registro-hero {
      padding: 6rem 0 3rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .registro-content {
      padding: 3rem 0;
    }

    .registro-layout {
      gap: 2rem;
    }
  }

  @media (max-width: 480px) {
    .registro-hero {
      padding: 5rem 0 2.5rem;
    }

    .container {
      padding: 0 1rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .registro-content {
      padding: 2rem 0;
    }
  }
</style>
