---
interface Props {
  titulo?: string;
  subtitulo?: string;
  lineColor?: string; // Color de las líneas superior e inferior
}

const {
  titulo = "Título por Defecto",
  subtitulo = "Subtítulo por Defecto",
  lineColor = "#8C09FF", // Color predeterminado: morado
} = Astro.props;
---

<div class="banner-container">
  <div
    class="line"
    style={`background-color: ${lineColor};`}
  ></div>
  <div class="banner-content">
    <h1>{titulo}</h1>
    <h2>{subtitulo}</h2>
  </div>
  <div
    class="line"
    style={`background-color: ${lineColor};`}
  ></div>
</div>

<style>
/* Contenedor principal del banner */
.banner-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 20px 0;
  background: linear-gradient(135deg, #1b1b1b, #2b2b2b); /* Fondo oscuro */
  color: white;
  text-align: center;
  overflow: hidden;
  position: relative;
  gap: 15px;
  background-image: url('/image/texture/textu3.jpg');
  background-position: center;
  background-size: contain;
  backdrop-filter: blur(50px);

}

/* Línea superior e inferior */
.line {
  height: 4px;
  width: 90%;
  max-width: 1200px;
  background-color: #8C09FF; /* Color dinámico por defecto */
  border-radius: 2px;
  transition: background-color 0.3s ease-in-out;
}

/* Contenido del banner */
.banner-content h1 {
  font-size: clamp(2rem, 4vw, 3rem); /* Escalable en pantallas */
  font-weight: bold;
  margin: 0;
}

.banner-content h2 {
  font-size: clamp(1.2rem, 2.5vw, 1.5rem); /* Escalable en pantallas */
  font-weight: 400;
  margin: 10px 0 0 0;
  opacity: 0.85;
  color: #dddddd; /* Un poco más claro que el texto principal */
}

/* Responsividad */
@media (max-width: 768px) {
  .line {
    width: 80%;
  }
}

@media (max-width: 480px) {
  .line {
    width: 75%;
  }

  .banner-content h1 {
    font-size: 1.8rem;
  }

  .banner-content h2 {
    font-size: 1rem;
  }
}
</style>
