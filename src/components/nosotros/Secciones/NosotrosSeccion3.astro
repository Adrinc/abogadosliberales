---
import React from "react";
import RiveComponent from "../../global/animations/riveComponent";
import BotonStyle1 from "../../global/BotonSt1.astro";


---


<section id="our_adventages" >
      <div class="esfera"/>
      <div class="gradient-background-top"></div>
      <div class="gradient-background-bottom"></div>
      <div class="rivecomp web">
        <RiveComponent
          src="/rive/cbluna-nosotros.riv"
          artboard="why_section"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react"
          transition:persist
        />
      </div>
      <div class="rivecomp movil">
        <RiveComponent
          src="/rive/cbluna-nosotros.riv"
          artboard="why_section_mobile"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="contain"
          client:only="react"
          transition:persist
        />
      </div>


<!--       <div class="boton">
        <BotonStyle1
        link="/proyectos"
        texto={"Nuestros proyectos"}
        fontsize="28px"
        fontweight="bold"
        showIcon={false}
      />
      </div> -->
    </section>
  

<style>

section {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
  }
  .gradient-background-top {
      position: absolute;
      top: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }

    .gradient-background-bottom {
      position: absolute;
      bottom: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }

  .esfera {
    position: absolute;
    top: 50%;
    left: 25%; 
    transform: translate(-50%, -50%);
    
    width: 1250px;
    height: 1250px;
    /* gradiente de color 375BEB a transparente radial centrado */
    background: radial-gradient(circle at center, #375beb84 0%, #141414 50%, transparent 100%);
    z-index: -1;
  }
  .boton {
    position: absolute;
    top: 80%;
    left: 25%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .rivecomp {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;

    z-index: 2;
  }



  .riveContainerMainCircle {
    position: absolute;
    display: flex;
    top: -30%;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    width: 100vw;
    height: 750px;
    z-index: 30;


  }


  .riveCircle {

    display: flex;
 
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 750px;
    height: 100%;
    z-index: 10;

  }
  
  .web {
    display: block;
  }
  
  .movil {
    display: none;
  }
  
  @media (max-width: 900px) {
    section {
      cursor: default;
      height: 120vh;
    }
    .esfera {
    position: absolute;
    top: 25%;
    left: 50%; 
    transform: translate(-50%, -50%);
    
    width: 600px;
    height: 600px;
    /* gradiente de color 375BEB a transparente radial centrado */
    background: radial-gradient(circle at center, #375beb84 10%, #141414 50%, transparent 100%);
    z-index: -1;
  }
    .web {
      display: none;
    }
    .movil {
      display: block;
    }
  }
  
</style>

