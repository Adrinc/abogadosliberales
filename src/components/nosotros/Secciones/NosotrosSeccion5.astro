---
import RiveComponent from "../../global/animations/riveComponent";
import BotonStyle1 from "../../global/BotonSt1.astro";
---


    <section id="our_services">
      <div class="rivecomp web">
        <RiveComponent
          src="/rive/cbluna-nosotros.riv"
          artboard="socio_seccion"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react" 
          transition:persist
        />
      </div>
      <div class="esfera"/>
      <div class="boton">
        <BotonStyle1
          link="/proyectos"
          texto={"Contacto"}
          fontsize="48px"
          fontweight="bold"
          showIcon={false}
        />
      </div>
    </section>


<style> 

section {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100vw;
      height: 50vh;

      }
   
      .rivecomp {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      
      z-index: 2;
      }
      
      .boton {
    position: absolute;
    top: 50%;
    left: 80%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }
.esfera {
  position: absolute;
  top: 10%;
    left: 10%; /* Mueve la esfera a la derecha */
  transform: translate(-50%, -50%);
  
  width: 1750px;
  height: 1750px;
  /* gradiente de color 375BEB a transparente radial centrado */
  background: radial-gradient(circle at center, #375beb4a 0%, #1a0a4e1c 30%, transparent 100%);
  z-index: -1;
}

.web {
  display: block;
}

.movil {
  display: none;
}

@media (max-width: 768px) {
  .section {
    cursor: default;
  }
  .web {
    display: none;
  }
  .movil {
    display: block;
  }
}

</style>