---

import RiveComponent from "../../global/animations/riveComponent";

---
<div class="centered-text relative">
  <h1 class="large-text white-text">NOSOTROS</h1>

</div>

<section id="nosotros_seccion2" >
  <div class="gradient-background-bottom"></div>
  <div class="rivecomp web">
    <RiveComponent
      src="/rive/cbluna-nosotros.riv"
      artboard="nosotros_seccion2"
      stateMachines="State Machine 1"
      autoplay={true}
      fit="contain"
      client:only="react"
      transition:persist
    />
  </div>
  <div class="rivecomp movil">
    <RiveComponent
    src="/rive/cbluna-nosotros.riv"
    artboard="nosotros_seccion2_mobile"
    stateMachines="State Machine 1"
    autoplay={true}
    fit="fitWidth"
    client:only="react"
    transition:persist
  />

    </div>

</section>


<style>

section {
position: relative;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100vw;
height: 50vh;

/* background-color: #0D0E26; */

}
.gradient-background-top {
      position: absolute;
      top: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }

    .gradient-background-bottom {
      position: absolute;
      bottom: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }

.rivecomp {
position: absolute;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100%;
height: 100%;

z-index: 2;
}



.web {
display: block;
}

.movil {
display: none;
}
.centered-text {
  text-align: center;
  margin-top: 10vh;
}

.large-text {
  font-size: 5em; /* Aumenta el tamaño de las letras del h1 */
}

.white-text {
  color: white;
}

.bold-text {
  font-weight: bold;
}

.gradient-text {
  font-size: 4em; /* Tamaño más grande para el h2 pero no tanto como el h1 */
  background: linear-gradient(to right, #B43BFF, #55D9FF);
  -webkit-background-clip: text;
  color: transparent;
}

@media (max-width: 900px) {
section {
  cursor: default;
  height: 35vh;
}
.web {
  display: none;
}
.movil {
  display: block;
  height: 100%;
}
.large-text {
    font-size: 3em; /* Tamaño más pequeño para pantallas medianas */
  }
  .gradient-text {
    font-size: 2.5em; /* Tamaño más pequeño para pantallas medianas */
  }
}
@media (max-width: 600px) {
  .large-text {
    font-size: 2em; /* Tamaño más pequeño para pantallas pequeñas */
  }
  .gradient-text {
    font-size: 1.5em; /* Tamaño más pequeño para pantallas pequeñas */
  }
}
</style>

