---
import RiveComponent from "../../global/animations/riveComponent";

import BotonStyle1 from "../../global/BotonSt1.astro";
---


    <section id="experience" >
      <div class="gradient-background-top"></div>
      <div class="gradient-background-bottom"></div>
      <div class="rivecomp web">
        <RiveComponent
          src="/rive/cbluna-nosotros.riv"
          artboard="mision_section"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react" 
          transition:persist
        />
      </div>
      <div class="rivecomp movil">
        <RiveComponent
          src="/rive/cbluna-nosotros.riv"
          artboard="mision_section_mobile"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react" 
          transition:persist
        />
      </div>

 <!--      <div class="boton">
        <BotonStyle1
          link="/proyectos"
          texto={"Nuestros servicios"}
          fontsize="28px"
          fontweight="bold"
          showIcon={false}
        />
      </div> -->

    </section>



    <style>

      section {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100vw;
      height: 100vh;


      
      }
      .gradient-background-top {
      position: absolute;
      top: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }

    .gradient-background-bottom {
      position: absolute;
      bottom: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }
      .rivecomp {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      
      z-index: 2;
      }
      .boton {
    position: absolute;
    top: 77%;
    left: 67%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }
      
      

      
      .web {
      display: block;
      width: 100%;
      height: 100%;
      }
      
      .movil {
      display: none;
      }
      
      @media (max-width: 900px) {
      section {
        cursor: default;
        height: 215vh;
      }
      .web {
        display: none;
        height: 100%;
        width: 100%;
      }
      .movil {
        display: block;
      }
      }
      
      </style>
      
      