---
import RiveComponent from "../../global/animations/riveComponent";

import BotonStyle1 from "../../global/BotonSt1.astro";
---


    <section id="experience" >
      <div class="rivecomp web">
        <RiveComponent
          src="/rive/cbluna-nosotros.riv"
          artboard="mision_section"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react" 
          transition:persist
        />
      </div>

      <div class="boton">
        <BotonStyle1
          link="/proyectos"
          texto={"Nuestros servicios"}
          fontsize="28px"
          fontweight="bold"
          showIcon={false}
        />
      </div>

    </section>



    <style>

      section {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100vw;
      height: 100vh;


      
      }
   
      .rivecomp {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      
      z-index: 2;
      }
      .boton {
    position: absolute;
    top: 77%;
    left: 67%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }
      
      

      
      .web {
      display: block;
      }
      
      .movil {
      display: none;
      }
      
      @media (max-width: 768px) {
      .section {
        cursor: default;
      }
      .web {
        display: none;
      }
      .movil {
        display: block;
      }
      }
      
      </style>
      
      