---

import RiveComponent from "../../global/animations/riveComponent";

---
<div class="centered-text mt-7">
  <h1 class="large-text white-text">Paso a paso hacia el éxito</h1>
  <h2 class="large-text bold-text gradient-text">No solo creamos páginas web...</h2>
</div>
<section id="servicios1" >
  <div class="rivecomp web">
    <RiveComponent
      src="/rive/cbluna-nosotros.riv"
      artboard="Servicios_tech"
      stateMachines="State Machine 1"
      autoplay={true}
      fit="fill"
      client:only="react"
      transition:persist
    />
  </div>


</section>


<style>

section {
position: relative;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100vw;
height: 100vh;
margin-top: 25px;


}

.centered-text {
  text-align: center;
}

.large-text {
  font-size: 5em; /* Aumenta el tamaño de las letras del h1 */
}

.white-text {
  color: white;
}

.bold-text {
  font-weight: bold;
}

.gradient-text {
  font-size: 4em; /* Tamaño más grande para el h2 pero no tanto como el h1 */
  background: linear-gradient(to right, #B43BFF, #55D9FF);
  -webkit-background-clip: text;
  color: transparent;
}

.rivecomp {
position: absolute;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100%;
height: 100%;

z-index: 2;
}



.riveContainerMainCircle {
position: absolute;
display: flex;
top: -30%;
flex-direction: row;
justify-content: space-evenly;
align-items: center;
width: 100vw;
height: 750px;
z-index: 30;


}


.riveCircle {

display: flex;

flex-direction: column;
justify-content: center;
align-items: center;
width: 750px;
height: 100%;
z-index: 10;

}

.web {
display: block;
}

.movil {
display: none;
}

@media (max-width: 768px) {
.section {
  cursor: default;
}
.web {
  display: none;
}
.movil {
  display: block;
}
}

</style>

