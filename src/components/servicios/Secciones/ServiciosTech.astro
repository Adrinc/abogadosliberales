---

import RiveComponent from "../../global/animations/riveComponent";

---
<div class="centered-text">
  <h1 class="large-text white-text">Paso a paso hacia el éxito</h1>
  <h2 class="large-text bold-text gradient-text">No solo creamos páginas web...</h2>
</div>
<section id="servicios1" >
  <div class="gradient-background-top"></div>

  <div class="gradient-background-bottom"></div>
  <div class="rivecomp web">
    <RiveComponent
      src="/rive/cbluna-nosotros.riv"
      artboard="Servicios_tech"
      stateMachines="State Machine 1"
      autoplay={true}
      fit="contain"
      client:only="react"
      transition:persist
    />
  </div>
  <div class="rivecomp movil">
    <RiveComponent
      src="/rive/cbluna-nosotros.riv"
      artboard="Servicios_tech_mobile"
      stateMachines="State Machine 1"
      autoplay={true}
      fit="fill"
      client:only="react"
      transition:persist
    />


</section>


<style>

section {
position: relative;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100vw;
height: 150vh;

overflow: hidden;

}
.gradient-background-top {
      position: absolute;
      top: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }

    .gradient-background-bottom {
      position: absolute;
      bottom: 0;
      width: 100vw;
      height: 7vh;
      background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
      z-index: 1;
      }
      .centered-text {
        position: relative;
  text-align: center;
  margin: 70px;
  z-index: 2; /* Asegura que el texto esté por encima del fondo degradado */
}

.large-text {
  font-size: 5em; /* Aumenta el tamaño de las letras del h1 */
}

.white-text {
  color: white;
}

.bold-text {
  font-weight: bold;
}

.gradient-text {
  font-size: 4em; /* Tamaño más grande para el h2 pero no tanto como el h1 */
  background: linear-gradient(to right, #B43BFF, #55D9FF);
  -webkit-background-clip: text;
  color: transparent;
}
.rivecomp {
position: absolute;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100%;
height: 100%;

z-index: 2;
}

.esfera {
    position: absolute;
    top: 50%;
      left: 0%; /* Mueve la esfera a la derecha */
    transform: translate(-50%, -50%);
    
    width: 1750px;
    height: 1750px;
    /* gradiente de color 375BEB a transparente radial centrado */
    background: radial-gradient(circle at center, #375beb4a 0%, #1a0a4e1c 30%, transparent 100%);
    z-index: -1;
  }


.riveContainerMainCircle {
position: absolute;
display: flex;
top: -30%;
flex-direction: row;
justify-content: space-evenly;
align-items: center;
width: 100vw;
height: 750px;
z-index: 30;


}


.riveCircle {

display: flex;

flex-direction: column;
justify-content: center;
align-items: center;
width: 750px;
height: 100%;
z-index: 10;

}

.web {
display: block;
}

.movil {
display: none;

}

@media (max-width: 900px) {
section {
  cursor: default;
  height: 130vh;
}
.large-text {
    font-size: 3em; /* Tamaño más pequeño para pantallas medianas */
  }
  .gradient-text {
    font-size: 2.5em; /* Tamaño más pequeño para pantallas medianas */
  }
.web {
  display: none;
}
.movil {
  display: block;
}
}
@media (max-width: 600px) {
  .large-text {
    font-size: 2em; /* Tamaño más pequeño para pantallas pequeñas */
  }
  .gradient-text {
    font-size: 1.5em; /* Tamaño más pequeño para pantallas pequeñas */
  }
}
</style>

