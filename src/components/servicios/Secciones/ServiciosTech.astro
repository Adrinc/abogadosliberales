---
import ServicioComponentOne from '../../servicios/components/ServicioComponentOne.astro';

const servicios = [
  {
    imagen: "/image/global/macbookrta.webp",
    titulo: "Desarrollo Web",
    descripcion: "Creamos sitios web atractivos y funcionales que proporcionan experiencias excepcionales para el usuario. Desde sitios corporativos hasta tiendas en línea.",
    reverse: true,
  },
  {
    imagen: "/image/global/screenmobile.webp",
    titulo: "Desarrollo Móvil",
    descripcion: "Desarrollamos aplicaciones para smartphones, tablets y dispositivos wearables, proporcionando valor a través de herramientas útiles y entretenidas.",
    reverse: false,
  },
  {
    imagen: "/image/global/screenmobile2.webp",
    titulo: "Gestor de Videos",
    descripcion: "Ofrecemos una experiencia continua de reproducción de contenido en video adaptada a tus intereses, con categorías como comedia, música y deportes.",
    reverse: true,
  },
  {
    imagen: "/image/global/marketingdigital.webp",
    titulo: "Marketing Digital",
    descripcion: "Impulsa tu presencia online con estrategias de marketing digital como SEO y campañas en redes sociales para conectar con tu audiencia y aumentar la visibilidad.",
    reverse: false,
  },
  {
    imagen: "/image/global/ideas.webp",
    titulo: "Ideas a la Medida",
    descripcion: "Diseñamos estrategias personalizadas que te ayudarán a destacar online y conectar con tu público objetivo mediante técnicas innovadoras.",
    reverse: true,
  },
];
---

<section id="servicios1">
<!--   <div class="centered-text large-text bold-text">
    <h1>Nuestros <span class="gradient-text font-black ">Servicios</span></h1>
    <h2>¿Tienes una idea? ¡Podemos hacerla realidad!</h2>
  </div> -->

  <div class="gradient-background-top"></div>
  <div class="gradient-background-bottom"></div>

  <div class="services-list">
    {servicios.map((servicio) => (
      <ServicioComponentOne
        imagen={servicio.imagen}
        titulo={servicio.titulo}
        descripcion={servicio.descripcion}
        reverse={servicio.reverse}
      />
    ))}
  </div>
</section>

<style>
section {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding-top: 5vh;
  padding-bottom: 5vh;
  padding-right: 15vw;
  padding-left: 15vw;
  box-sizing: border-box;
  overflow: hidden;
  
}

.gradient-background-top, .gradient-background-bottom {
  position: absolute;
  width: 100%;
  height: 7vh;
  z-index: 1;
}

.gradient-background-top {
  top: 0;
  background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
}

.gradient-background-bottom {
  bottom: 0;
  background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
}

.centered-text {
  position: relative;
  text-align: center;
  margin-bottom: 50px;
  z-index: 2;
}

.large-text {
  color: white;
  font-size: clamp(2em, 5vw, 4em);
}


.bold-text {
  font-weight: bold;
}

.gradient-text {
  background: linear-gradient(to right, #B43BFF, #55D9FF);
  -webkit-background-clip: text;
  color: transparent;
}

.services-list {
  display: flex;
  flex-direction: column;
  gap: 40px;
  width: 100%;
}

@media (max-width: 900px) {
  section {
    height: auto;
    padding-right: 5vw;
    padding-left: 5vw;
  }

  .large-text {
    font-size: clamp(2em, 10vw, 3.5em);
  }

  .gradient-text {
    font-size: clamp(1.8em, 2.5vw, 2.5em);
  }
}

@media (max-width: 600px) {
  .large-text {
    font-size: clamp(1.5em, 2vw, 2em);
  }

  .gradient-text {
    font-size: clamp(1.5em, 1.5vw, 1.5em);
  }
}
</style>
