---
import RiveComponent from "../../global/animations/riveComponent";
---


    <section id="our_services">
      <div class="gradient-background-top"></div>
      <div class="gradient-background-bottom"></div>
      <div class="rivecomp web">
        <RiveComponent
          src="/rive/cbluna.riv"
          artboard="seccion4"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react" 
          transition:persist
        />
      </div>
    <!--   <div class="esfera"/> -->

      <div class="rivecomp movil">
        <RiveComponent 
        src="/rive/cbluna.riv"
        artboard="seccion4_mobile"
        stateMachines="State Machine 1"
        autoplay={true}
        fit="fill"
        client:only="react"
        transition:persist

        />

        </div>
    </section>


<style> 

section {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      }
   
      .rivecomp {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      
      z-index: 2;
      }
      .gradient-background-top {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 7vh;
  background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
  z-index: 1;
}

.gradient-background-bottom {
  position: absolute;
  bottom: 0;
  width: 100vw;
  height: 7vh;
  background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
  z-index: 1;
}


.esfera {
  position: absolute;
  top: 10%;
    left: 10%; /* Mueve la esfera a la derecha */
  transform: translate(-50%, -50%);
  
  width: 1750px;
  height: 1750px;
  /* gradiente de color 375BEB a transparente radial centrado */
  background: radial-gradient(circle at center, #375beb4a 0%, #1a0a4e1c 30%, transparent 100%);
  z-index: -1;
  
}

.web {
  display: block;
}

.movil {
  display: none;
}

@media (max-width: 900px) {
  section {
    cursor: default;
    height: 120vh;
  }
  .web {
    display: none;
  }
  .movil {
    display: block;
  }
}

</style>