---

import RiveComponent from "../../global/animations/riveComponent";

---

<div class="centered-text">
  <h1 class="large-text white-text">Explora nuestras soluciones</h1>
  <h2 class="large-text bold-text gradient-text">innovadoras y personalizadas</h2>
</div>
<section id="about">
  <div class="gradient-background-top"></div>
  <div class="gradient-background-bottom"></div>
  <div class="rivecomp web">
    <RiveComponent
      src="/rive/cbluna.riv"
      artboard="seccion2"
      stateMachines="State Machine 1"
      autoplay={true}
      fit="fill"
      client:only="react"
      transition:persist
    />
  </div>

  <div class="rivecomp movil">
    <RiveComponent 
      src="/rive/cbluna.riv"
      artboard="seccion2_mobile"
      stateMachines="State Machine 1"
      autoplay={true}
      fit="fill"
      client:only="react"
      transition:persist
    />
  </div>
</section>

<style>
section {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 80vh;
}

.gradient-background-top {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 7vh;
  background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
  z-index: 1;
}

.gradient-background-bottom {
  position: absolute;
  bottom: 0;
  width: 100vw;
  height: 7vh;
  background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
  z-index: 1;
}

.centered-text {
  text-align: center;
  margin: 70px;
  z-index: 2; /* Asegura que el texto esté por encima del fondo degradado */
}

.large-text {
  font-size: 5em; /* Aumenta el tamaño de las letras del h1 */
}

.white-text {
  color: white;
}

.bold-text {
  font-weight: bold;
}

.gradient-text {
  font-size: 4em; /* Tamaño más grande para el h2 pero no tanto como el h1 */
  background: linear-gradient(to right, #B43BFF, #55D9FF);
  -webkit-background-clip: text;
  color: transparent;
}

.rivecomp {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  z-index: 2;
}



.web {
  display: block;
}

.movil {
  display: none;
}

@media (max-width: 900px) {
  section {
    cursor: default;
  }
  .large-text {
    font-size: 3em; /* Tamaño más pequeño para pantallas medianas */
  }
  .gradient-text {
    font-size: 2.5em; /* Tamaño más pequeño para pantallas medianas */
  }
  .web {
    display: none;
  }
  .movil {
    display: block;
  }
}

@media (max-width: 600px) {
  .large-text {
    font-size: 2em; /* Tamaño más pequeño para pantallas pequeñas */
  }
  .gradient-text {
    font-size: 1.5em; /* Tamaño más pequeño para pantallas pequeñas */
  }
}
</style>