---
import React from "react";
import RiveComponent from "../../global/animations/riveComponent";
import styles from "../css/indexSeccion3.module.css";

---


    <section id="our_adventages" >
      <div class="esfera"/>
      <div class="gradient-background-top"></div>
      <div class="gradient-background-bottom"></div>
      <div class="rivecomp web">
        <RiveComponent
          src="/rive/cbluna-proyectos.riv"
          artboard="index_carrusel"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react"
          transition:persist
        />
      </div>

      <div class="rivecomp movil">
        <RiveComponent
          src="/rive/cbluna-proyectos.riv"
          artboard="index_carrusel_mobile"
          stateMachines="State Machine 1"
          autoplay={true}
          fit="fill"
          client:only="react"
          transition:persist
        />

   
    </section>
  

<style>

section {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100vw;
    height: 75vh;
    overflow: hidden;
  }
  .gradient-background-top {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 7vh;
  background: linear-gradient(to bottom, #375beb4a -100%, transparent 100%);
  z-index: 1;
}

.gradient-background-bottom {
  position: absolute;
  bottom: 0;
  width: 100vw;
  height: 7vh;
  background: linear-gradient(to top, #375beb4a -100%, transparent 100%);
  z-index: 1;
}
  .esfera {
    position: absolute;
    top: 20%;
      left: 50%; /* Mueve la esfera a la derecha */
    transform: translate(-50%, -50%);
    
    width: 1750px;
    height: 1750px;
    /* gradiente de color 375BEB a transparente radial centrado */
    background: radial-gradient(circle at center, #375beb4a 0%, #1a0a4e1c 30%, transparent 100%);
    z-index: -1;
  }

  .rivecomp {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;

    z-index: 2;
  }




  
  .web {
    display: block;
  }
  
  .movil {
    display: none;
  }
  
  @media (max-width: 900px) {
    section {
      cursor: default;
      height: 50vh;

    }
    .web {
      display: none;
    }
    .movil {
      display: block;
    }
  }
  
</style>

